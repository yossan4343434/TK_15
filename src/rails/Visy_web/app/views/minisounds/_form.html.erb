<%= simple_form_for @minisound, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :video_id %>
  <%= error_span(@minisound[:video_id]) %>
  <%= f.input :name %>
  <%= error_span(@minisound[:name]) %>
  <%= f.input :playtime %>
  <%= error_span(@minisound[:playtime]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                minisounds_path, :class => 'btn btn-default' %>
<% end %>
