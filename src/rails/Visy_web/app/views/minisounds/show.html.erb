<%- model_class = Minisound -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:movie_id) %>:</strong></dt>
  <dd><%= @minisound.movie_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @minisound.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:playtime) %>:</strong></dt>
  <dd><%= @minisound.playtime %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              minisounds_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_minisound_path(@minisound), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              minisound_path(@minisound),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
