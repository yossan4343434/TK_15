<%- model_class = Sound -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @sound.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:video_id) %>:</strong></dt>
  <dd><%= @sound.video_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:playtime) %>:</strong></dt>
  <dd><%= @sound.playtime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sound) %>:</strong></dt>
  <dd><%= @sound.sound %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sounds_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sound_path(@sound), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sound_path(@sound),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
