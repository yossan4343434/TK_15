<%= simple_form_for @sound, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@sound[:name]) %>
  <%= f.input :video_id %>
  <%= error_span(@sound[:video_id]) %>
  <%= f.input :playtime %>
  <%= error_span(@sound[:playtime]) %>
  <%= f.input :sound %>
  <%= error_span(@sound[:sound]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sounds_path, :class => 'btn btn-default' %>
<% end %>
