<%- model_class = Sound -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:video_id) %></th>
      <th><%= model_class.human_attribute_name(:playtime) %></th>
      <th><%= model_class.human_attribute_name(:sound) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sounds.each do |sound| %>
      <tr>
        <td><%= link_to sound.id, sound_path(sound) %></td>
        <td><%= sound.name %></td>
        <td><%= sound.video_id %></td>
        <td><%= sound.playtime %></td>
        <td><%= sound.sound %></td>
        <td><%=l sound.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sound_path(sound), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sound_path(sound),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sound_path,
            :class => 'btn btn-primary' %>
<button type="button" class="btn btn-default">
<%= link_to "reset", "/sounds_reset"%>
</button>

